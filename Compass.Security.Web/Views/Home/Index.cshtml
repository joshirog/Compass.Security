@{
    ViewBag.Title = "Home";
}

<div class="row col-sm-6">
    <div class="text-center">
        <ul class="list-group">
            @foreach(var claim in User.Claims) 
            {
                <li class="list-group-item"><strong>@claim.Type</strong> <br/> @claim.Value </li>
            }
        </ul>
        
        <br/>
                                
        <form id="loginForm" method="post" asp-controller="Account" asp-action="SignOut">
            <button class="btn btn-primary shadow-none my-2" type="submit">Sign out</button>
        </form>
    </div>
</div>