@model Compass.Security.Application.Services.Accounts.Commands.Resend.ResendCommand

@{
    ViewBag.Title = "Verification";
}

<div class="text-center">
    <div class="mb-4">
        <img class="avatar avatar-xxl avatar-4by3" src="~/svg/illustrations/click.svg" alt="Image Description">
    </div>

    <h1 class="display-4">Verify your email</h1>

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    @if (TempData["message"] is not null)
    {
        <div class="form-group text-center">
            <strong>@TempData["message"]</strong>
            <br>
        </div>
    }

    <p class="mb-1">We've sent a link to your email address</p>
    <span class="d-block text-dark font-weight-bold mb-1"></span>
    
    <p>Please follow the link inside to continue.</p>
    
    <div class="mt-4 mb-3">
        <a class="btn btn-primary btn-wide" asp-action="SignIn" asp-controller="Account">Skip now</a>
    </div>
    
    <form method="post" asp-controller="Account" asp-action="Resend">
        <input type="hidden" asp-for="UserId"/>
        <input type="hidden" asp-for="ReturnUrl"/>
        <p>
            Didn't receive an email?
            <a href="javascript:document.forms[0].submit()">Resend</a>
        </p>
    </form>
</div>